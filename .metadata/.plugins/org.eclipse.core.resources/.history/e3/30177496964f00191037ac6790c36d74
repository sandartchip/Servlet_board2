	<script>
		function formCheck(){
		
			//첫번째 form의 제목의 값
			var title = document.forms[0].title.value;
			var content = document.forms[0].content.value;
			if(title.length == 0)
				alert("제목 없음");
			
			if(content.length == 0 )
				alert("내용 없음");
			
			if( title.length >80) 
				alert("제목의 길이가 너무 깁니다");
			console.log("제목: " + title + "내용  : " + content);
		
			if( ( title.length >80)|| (content.length == 0 ) || (title.length == 0))
				return false;
		} 
	</script>
